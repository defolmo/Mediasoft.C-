@model List<NoteApp.Models.Category>

<h2>Категории</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Создать категорию</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-controller="Notes" asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-info btn-sm">Заметки</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>